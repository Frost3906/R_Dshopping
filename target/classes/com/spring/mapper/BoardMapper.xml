<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.BoardMapper">

	<!-- insert -->
	<insert id="insert">
		<selectKey keyProperty="bno" order="BEFORE" resultType="int">
			select seq_board.nextval from dual
		</selectKey>
		insert into board(bno, title, writer, content)
		values(#{bno}, #{title}, #{writer}, #{content})
	</insert>
	<!-- select -->
	<select id="read" resultType="com.spring.domain.BoardVO">
		select * from board where bno=#{bno}
	</select>
	<!-- update -->
	<update id="update">
		update board
		set title=#{title}, content=#{content}
		where bno=#{bno}
	</update>
	<!-- delete -->
	<delete id="delete">
		delete from board
		where bno=#{bno}
	</delete>
	
	
	<!-- list -->
	<select id="list" resultType="com.spring.domain.BoardVO">
		<![CDATA[
			select *
			from (select /*+INDEX_DESC(board pk_board) */
						rownum rn, bno, title, writer, regdate, updatedate, replycnt
						from board
						where
		]]>
		<include refid="criteria"></include>
		<![CDATA[
			bno > 0 and rownum <= (#{pageNum}*#{amount}))
			where rn > (#{pageNum}-1)*#{amount}
		]]>
	</select>
	
	<!-- 댓글 수 변경 : 삽입 amount → +1, 삭제 amount → -1 -->
	<update id="updateReplyCnt">
		update board set replycnt = replycnt + #{amount}
		where bno = #{bno}
	</update>

	<select id="total" resultType="int">
		select count(*) from board where
		<include refid="criteria"></include>
		 bno>0
	</select>
	
	
	
	<!-- 동적 sql 작성 -->
	<sql id="criteria">
		<trim prefix="(" suffix=") AND" prefixOverrides="OR">
			<foreach collection="typeArr" item="type">
				<trim prefix="OR">
					<choose>
						<when test="type=='T'.toString()">
							title like '%'||#{keyword}||'%'
						</when>
						<when test="type=='C'.toString()">
							content like '%'||#{keyword}||'%'
						</when>
						<when test="type=='W'.toString()">
							writer like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>
		
</mapper>